<Window x:Class="WpfDemoApp.Layouts.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Layouts"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
  <StackPanel>
    <StackPanel Margin="20, 5, 0, 0" Orientation="Horizontal">
      <Border BorderBrush="Black" BorderThickness="1" Width="90">
        <TextBlock Text="UserID:"  TextAlignment="Right"/>
      </Border>
      <TextBox Text="Enter UserID here..."/>
    </StackPanel>
    <StackPanel Margin="20, 5, 0, 0" Orientation="Horizontal">
      <Border BorderBrush="Black" BorderThickness="1" Width="90" CornerRadius="5">
        <TextBlock Text="Password:" TextAlignment="Right"/>
      </Border>
      <TextBox Text="Enter Password here..."/>
    </StackPanel>
    <StackPanel Margin="20, 5, 0, 0" Orientation="Horizontal">
      <Button Content="Login" Margin="10,0,0,0"/>
      <Button Content="Cancel" Margin="10,0,0,0"/>
    </StackPanel>
  </StackPanel>
</Window>
